# Auto detect text files and normalize line endings to LF in the repository
* text=auto eol=lf

# Explicitly declare text files you want to normalize
*.gradle text eol=lf
*.java text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.jar binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.wpilog binary

# Gradle wrapper (important for cross-platform builds)
gradlew text eol=lf
gradle/wrapper/gradle-wrapper.properties text eol=lf

# Git configuration
.gitignore text eol=lf
.gitattributes text eol=lf
